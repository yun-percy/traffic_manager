<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dip"
    >
    
    <ImageView 
        android:id="@+id/iv_traffic_icon"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"
        android:src="@drawable/app"
        android:contentDescription="@string/hello_world"/>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="45dip"
	    android:layout_marginLeft="10dip"
	    android:layout_toRightOf="@id/iv_traffic_icon"
        android:gravity="center_vertical"
        android:orientation="vertical">
        
	    <TextView 
	        android:id="@+id/tv_traffic_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/hello_world"
	        android:textSize="14sp"
	        android:textColor="#ffffffff"/>
        
    </LinearLayout>
    
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="45dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        
        <TextView 
            android:id="@+id/tv_traffic_transmitted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/traffic"
            android:drawableLeft="@drawable/upload"
            android:drawablePadding="3dip"/>
        
        <TextView 
            android:id="@+id/tv_traffic_received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/traffic"
            android:drawableLeft="@drawable/download"
            android:drawablePadding="3dip"/>
        
    </LinearLayout>
    
</RelativeLayout>
